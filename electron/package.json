{
  "name": "amt-trading-signal-bot",
  "version": "1.0.0",
  "description": "AMT Trading Signal Bot - Desktop Application",
  "main": "main.js",
  "author": "AMT Trading Bot Team",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder --win --x64",
    "build:frontend": "cd ../frontend && yarn build",
    "build:backend": "cd ../backend && pyinstaller --onefile --name server server.py --distpath ./dist",
    "prebuild": "npm run build:frontend",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.amt.tradingbot",
    "productName": "AMT Trading Bot",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "frontend/build",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/dist/server.exe",
        "to": "backend/server.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AMT Trading Bot",
      "deleteAppDataOnUninstall": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  }
}
